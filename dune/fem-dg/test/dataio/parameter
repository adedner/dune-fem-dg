fem.io.savestep: 0.1
# SaveCount (write daa every saveCount time steps, <=0 deactivates)
fem.io.savecount: 0

# toggle verbosity of on process (-1: off, p: process p is verbose, in general 0 is a good choice)
fem.verboserank: 0

